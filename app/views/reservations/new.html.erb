<div class="min-h-screen bg-gradient-to-br from-indigo-50 via-white to-purple-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-2xl mx-auto">
    <!-- 헤더 -->
    <div class="text-center mb-8">
      <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-2">AI 코칭 예약</h1>
      <p class="text-lg text-gray-600">개인 맞춤형 AI 수익화 코칭을 예약해보세요</p>
    </div>
    
    <!-- 예약 폼 -->
    <div class="bg-white rounded-lg shadow-xl p-8">
      <%= turbo_frame_tag "reservation_form" do %>
        <%= form_with model: @reservation, 
                      local: true, 
                      data: { turbo_frame: "_top" },
                      class: "space-y-6" do |f| %>
          
          <!-- 이름 -->
          <div>
            <%= f.label :name, "이름", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.text_field :name, 
                            required: true,
                            class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all",
                            placeholder: "홍길동" %>
            <% if @reservation.errors[:name].any? %>
              <p class="mt-1 text-sm text-red-600"><%= @reservation.errors[:name].first %></p>
            <% end %>
          </div>
          
          <!-- 연락처 -->
          <div>
            <%= f.label :phone, "연락처", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.telephone_field :phone, 
                                 required: true,
                                 class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all",
                                 placeholder: "01012345678" %>
            <% if @reservation.errors[:phone].any? %>
              <p class="mt-1 text-sm text-red-600"><%= @reservation.errors[:phone].first %></p>
            <% end %>
          </div>
          
          <!-- 이메일 -->
          <div>
            <%= f.label :email, "이메일", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.email_field :email, 
                            required: true,
                            class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all",
                            placeholder: "example@email.com" %>
            <% if @reservation.errors[:email].any? %>
              <p class="mt-1 text-sm text-red-600"><%= @reservation.errors[:email].first %></p>
            <% end %>
          </div>
          
          <!-- 예약 날짜/시간 -->
          <div>
            <%= f.label :reservation_datetime, "예약 날짜 및 시간", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.datetime_local_field :reservation_datetime, 
                                      required: true,
                                      class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all" %>
            <% if @reservation.errors[:reservation_datetime].any? %>
              <p class="mt-1 text-sm text-red-600"><%= @reservation.errors[:reservation_datetime].first %></p>
            <% end %>
          </div>
          
          <!-- 코칭 형태 -->
          <div>
            <%= f.label :coaching_type, "코칭 형태", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.select :coaching_type, 
                        options_for_select(Reservation::COACHING_TYPES.map { |type| [type, type] }, @reservation.coaching_type),
                        { prompt: "코칭 형태를 선택해주세요" },
                        { required: true,
                          class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all" } %>
            <% if @reservation.errors[:coaching_type].any? %>
              <p class="mt-1 text-sm text-red-600"><%= @reservation.errors[:coaching_type].first %></p>
            <% end %>
          </div>
          
          <!-- 선택 과목 -->
          <div>
            <%= f.label :selected_subjects, "선택 과목 (복수 선택 가능)", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <div class="space-y-2">
              <% Reservation::SUBJECT_OPTIONS.each do |subject| %>
                <label class="flex items-center space-x-3 cursor-pointer hover:bg-gray-50 p-2 rounded-lg transition-colors">
                  <%= check_box_tag "reservation[selected_subjects][]", 
                                   subject, 
                                   @reservation.selected_subjects&.include?(subject),
                                   class: "w-5 h-5 text-indigo-600 border-gray-300 rounded focus:ring-indigo-500" %>
                  <span class="text-gray-700"><%= subject %></span>
                </label>
              <% end %>
            </div>
          </div>
          
          <!-- 요청사항 -->
          <div>
            <%= f.label :requests, "요청사항", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.text_area :requests, 
                           rows: 4,
                           class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all",
                           placeholder: "추가로 요청하실 사항이 있으시면 작성해주세요" %>
          </div>
          
          <!-- 개인정보 동의 -->
          <div class="flex items-start space-x-3">
            <%= f.check_box :privacy_agreed, 
                          { required: true, class: "mt-1 w-5 h-5 text-indigo-600 border-gray-300 rounded focus:ring-indigo-500" },
                          "true", 
                          "false" %>
            <label for="reservation_privacy_agreed" class="text-sm text-gray-700">
              개인정보 수집 및 이용에 동의합니다. 
              <a href="#" class="text-indigo-600 hover:text-indigo-800 underline">자세히 보기</a>
            </label>
          </div>
          <% if @reservation.errors[:privacy_agreed].any? %>
            <p class="text-sm text-red-600"><%= @reservation.errors[:privacy_agreed].first %></p>
          <% end %>
          
          <!-- 제출 버튼 -->
          <div class="pt-4">
            <%= f.submit "예약하기", 
                        class: "w-full bg-indigo-600 text-white py-3 px-6 rounded-lg font-semibold hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 transition-all transform hover:scale-[1.02] active:scale-[0.98]" %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

